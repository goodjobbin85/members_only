<h1 align="center">Sign up now</h1>

<div align="center">
    <%= form_for @user do |f| %>
        <p>
            <%= f.label :email %>
            <%= f.text_field :email %>
        </p>
        <p>
            <%= f.label :password %>
            <%= f.password_field :password %>
        </p>
        <p>
            <%= f.submit %>
        </p>
    <% end %>
</div>