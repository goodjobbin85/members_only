<h1>Create Post</h1>

<div align="center">
    <%= form_for @post do |f| %>
        <% if @post.errors.any? %>
            <h2>The following errors prevented your user from being saved:</h2>
                <ul>
                    <% @post.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            <% end %>
        <%= f.label :description %>
        <%= f.text_field :description %>
        
        <%= f.submit %>
    <% end %>
</div>
